/* component/product-hot/product-hot.wxss */

.product-hot {
  position: relative;
}

.product-hot .img {
  width: 252rpx;
  height: 252rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 50rpx;
  overflow: hidden;
}

.product-hot .mt {
  z-index: 2;
  padding: 10rpx 15rpx 30rpx 15rpx;
  width: 255rpx;
}

.product-hot .mt .brand {
  display: block;
  font-size: 24rpx;
  color: #555;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text{
  display: -webkit-box;
  font-size:28rpx;
  color:#000000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
}

.product-hot .mt .description {
  display: block;
  font-size: 20rpx;
  color: #7f7f7f;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-top: 5rpx;
}

.product-hot .mt .price {
  display: block;
  font-size: 25rpx;
  color: #d44d44;
  font-weight: 700;
  margin-top: 5rpx;
}


.market{
  text-decoration: line-through;
  color: rgb(116, 112, 112);
  font-size: 24rpx;
  margin-top: 7rpx;
  margin-left: 22rpx;
}

.product-hot .tag {
  font-weight: 700;
  position: absolute;
  top: 5rpx;
  left: 15rpx;
}
