/* pages/poster/poster.wxss */
cover-view, view, swiper, text, button, input, image {
  box-sizing: border-box;
  display: flex;
  }
/*海报*/

.poster_box {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  flex-direction: column;
  /* display: none */
}

.poster_head {
  position: relative;
  width: 100%;
  height: 900rpx;
  margin: 40rpx auto 20rpx auto;
}

/*轮播图 start*/

.poster_swiper, .swiper_share {
  position: relative;
  width: 100%;
  height: 100%;
}

.swiper_item1, .swiper_item2, .swiper_item3 {
  box-sizing: border-box;
  padding: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  background-clip: content-box;
  border-radius: 30rpx;
}

.avatar_url {
  margin-top: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.nickname {
  width: 100%;
  padding: 10rpx 20rpx 30rpx;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333;
}

.thumb_images {
  width: 420rpx;
  height: 420rpx;
}

.product_name {
  position: relative;
  width: 420rpx;
  padding: 20rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #ff8409;
}

.flag_new {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 63rpx;
  height: 33rpx;
}

.product_name_txt {
  width: 100%;
  display: -webkit-box;
  height: 68rpx;
  line-height: 34rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.poster_qr {
  position: relative;
  width: 420rpx;
  height: 230rpx;
  justify-content: space-between;
  align-items: center;
}

.poster_qrtext {
  flex-direction: column;
  width: 210rpx;
  height: 120rpx;
  justify-content: center;
  border-top: 1px dashed #979797;
  border-bottom: 1px dashed #979797;
  font-size: 20rpx;
  color: #666;
}

.poster_qrcode {
  width: 180rpx;
  height: 180rpx;
}

.qrcode_text {
  font-size: 20rpx;
  color: #666;
}

.product_price {
  font-size: 38rpx;
  color: #333;
  align-items: baseline;
}

.product_rmb {
  font-size: 28rpx;
}

 

/*海报二*/

.avatar_nickname {
  margin-top: 20rpx;
  width: 100%;
  padding: 10rpx 20rpx 30rpx;
  align-items: center;
  justify-content: center;
}

.swiper_item2 .avatar_url {
  margin-top: 0;
  margin-right: 20rpx;
  border-radius: 50%;
}

.swiper_item2 .nickname {
  width: 80%;
  padding: 0;
  font-size: 28rpx;
  color: #333;
   display: block
}

.swiper_item2 .product_name {
  width: 460rpx;
  border-top: 1px dashed #979797;
  background-color: transparent;
  font-size: 24rpx;
  color: #333;
  padding: 20rpx 0;
  justify-content: space-between;
}

.swiper_item2 .product_name_txt {
  text-indent: 0;
}

.swiper_item2 .product_price {
  font-size: 32rpx;
  color: #333;
}

.swiper_item2 .product_rmb {
  font-size: 24rpx;
  color: #333;
}

.product_thumb {
  width: 460rpx;
  justify-content: space-between;
}

.swiper_item2 .thumb_images {
  width: 220rpx;
  height: 300rpx;
}

.swiper_item2 .poster_qr {
  border-top: 1px dashed #979797;
  width: 460rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.swiper_item2 .qrcode_text {
  padding: 10rpx;
}

.product_slogan {
  flex-direction: column;
  justify-content: center;
  width: 460rpx;
  font-size: 24rpx;
  padding-top: 30rpx;
 padding-bottom: 30rpx;
}

